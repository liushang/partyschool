.header
  width: 100%;
  height: 50px
  background: #8B0000
  text-align center
  position relative
  top 0
  left 0
  z-index 999
  img
    margin: 10px 0 0
    display inline-block
  #top_l
    margin-left: 30px
    float: left
    width: 28px
    height: 28px
    margin-top 10px
    background-color: white
    border 1px solid white
    border-radius 2px
    vertical-align: middle
  .header_name
    display inline-block
    height 30px
    width: 60%
    margin 18px auto 0px
    font-size 19px
    color white
  #top_r
    float: right
    margin-right: 28px
    margin-top 10px
    width: 28px
    height: 28px
    border 1px solid white
    border-radius 2px
