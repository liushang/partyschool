.perinfo
  margin 10px auto
  width 90%
  .perinfo-short
    float left
    width 48%
    position relative
    margin 0px 0 30px 0
    .short-item
      margin 22px 0 0 10px
      font-size 18px
      border-bottom 1px solid rgba(7,17,27,0.1)
      .item-input
        width 70px
    .headimg-plus
      position absolute
      left 50%
      margin-left -15px
      top 50%
      margin-top -20px
      font-size 40px
    img
      position relative
      left 50%
      margin-left -60px
      opacity 0.4
      border-radius 50%
  .perinfo-long
    clear left
    margin 60px auto
    padding-bottom 20px
    border 8px solid
    border-top 8px solid #c84d51
    border-image: -webkit-linear-gradient( #c84d51, white) 30 30
    border-image: -moz-linear-gradient( #c84d51, white) 30 30
    border-image: linear-gradient( #c84d51, white) 30 30
    border-bottom none
    .long-item
      margin  20px 10px
      font-size 18px
      border-bottom 1px solid rgba(7,17,27,0.1)
      .item-input
        width 60%
  .perinfo-sub
    position fixed
    width 90%
    margin 0 auto
    height 40px
    background-color white
    color white
    line-height 40px
    text-align center
    bottom 0
    left 5%
    padding-bottom 10px
    .perinfo-finish
      height 100%
      width 100%
      border-radius 5px
      background-color #8b0000
.perinfo
  .person-pic
    overflow hidden
    margin 20px 0 0 3%
    #pic-input
      position absolute
      display block
      width 100px
      height 100px
      border-radius 50%
      z-index 2
      left: 50%
      top 50%
      margin-left -50px
      margin-top -50px
      opacity 0
      overflow hidden

