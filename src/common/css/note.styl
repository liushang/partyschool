.title-title
  text-align center
  font-size 20px
  font-size 700
  margin 20px
  border-bottom 1px solid rgba(7,17,27,0.1)
.title-tip
  margin 20px
.note-content
  margin 10px 5% 0
  .content-part
    display inline-block
    line-height 20px
    width 100%
    .part-text
      width 100%
      min-height 30px
      line-height 30px
      border-bottom 1px solid rgba(7,17,27,0.1)
      outline none
.content-img
  display inline-block
  width 48%
  margin 5px 1%
  position relative
  float left
  .imgplus
    display:inline-block
    width 80%
    margin 0 10%
    height 160px
    border 1px solid rgba(7,17,27,0.1)
    border-radius 8px
    line-height 180px
    text-align center
  #takepic
    position absolute
    width 100%
    height 160px
    left 0
    top 0
    z-index 2
    opacity 0
.note-time
  clear left
  margin 10px 0 60px
  width 100%
  text-align center
  height 20px

